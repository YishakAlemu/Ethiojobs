class _CompaniespageState extends State<Companiespage> {
  final String? _selectedValue = '';
  int _selectedNavIndex = 1;
int _getIndex(String label) {
    switch (label) {
      case 'Jobs':
        return 0;
      case 'Companies':
        return 1;
      case 'My Applications':
        return 2;
      case 'Profile':
        return 3;
     
      default:
        return 0;
    }
  }
  @override
